<h1>Post <%= @post.id %></h1>
<p><%= @post.body %></p>
<%= link_to 'Edit', edit_post_path(@post) %>
<br>
<h2>Last Update</h2>
<p><%= @post.updated_at %></p>
<br>
<h1>Comments</h1>

<%= form_with(model: @comment, url:'/posts/'+@post.id.to_s+'/comments', local: true) do |form| %>
    <%= form.label :body %> <br>
    <%= form.text_field :body %> <br> <br>

    <%= hidden_field_tag :id, @post.id %>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

<% @post.comments.each do |comment| %>
    <p><%= comment.body %></p>
    <p><%= link_to 'Destroy', '/posts/'+@post.id.to_s+'/comments/'+comment.id.to_s, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <hr>
<% end %>

<%= link_to 'Back', posts_path %>
